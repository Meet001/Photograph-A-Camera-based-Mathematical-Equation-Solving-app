<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.voidwalkers.photograph.MatrixFragment.MatrixMain">

    <RelativeLayout
        android:layout_width="426dp"
        android:layout_height="541dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ListView
            android:id="@+id/list_of_variables"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/clear_all_variables"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/clear_all_variables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR ALL"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/perform_operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/add_matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Matrix"
            android:layout_alignBaseline="@+id/perform_operations"
            android:layout_alignBottom="@+id/perform_operations"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
